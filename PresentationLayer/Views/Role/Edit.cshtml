@model IdentityRole
@{
    ViewData["Title"] = "Edit";
}

<h1>Update Role</h1>


<form asp-action="Edit">

    <input asp-for="Id" hidden >

    <partial name="PartialViews/CreateEditRolePartialView" />

    <td>
        <a asp-action="AddOrRemoveUsers" asp-route-roleid="@Model.Id" class="btn btn-success">

            <i class="fas fa-edit"></i>   AddOrRemoveUsers
        </a>
    </td>
    <input type="submit"  value="Save" class="btn btn-success " />
    
    <a asp-action="Index" class="btn btn-primary mt-1"> <i class="fas fa-arrow-left"></i> Back To List</a>

</form>


@section ValidationScriptSection
    {
    <partial name="_ValidationScriptsPartial" />
}